<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WatchlistFragment">


    <TextView
        android:id="@+id/message2"
        android:layout_width="268dp"
        android:layout_height="58dp"
        android:text="@string/default_message_watchlist"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerview_watchlist"
        app:layout_constraintEnd_toEndOf="@+id/recyclerview_watchlist"
        app:layout_constraintStart_toStartOf="@+id/recyclerview_watchlist"
        app:layout_constraintTop_toTopOf="@+id/recyclerview_watchlist" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_watchlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:itemCount="5"
        tools:listitem="@layout/recyclerview_item" />
</androidx.constraintlayout.widget.ConstraintLayout>
